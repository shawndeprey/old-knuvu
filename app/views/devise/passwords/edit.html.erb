<div class="floating-container">
	<h2 class="form-header">Change your password</h2><br />
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	  <%= devise_error_messages! %>
	  <%= f.hidden_field :reset_password_token %>
	  <%= f.password_field :password, :autofocus => true, :class => "form-text-input", :placeholder => "Password" %>
	  <%= f.password_field :password_confirmation, :class => "form-text-input", :placeholder => "Password Confirmation" %>
	  <center><%= f.submit "Change my password", :class => "form-submit-input" %></center>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
