<div class="floating-container">
	<h2 class="form-header">Sign in</h2><br />
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
	  <%= f.email_field :email, :autofocus => true, :class => "form-text-input", :placeholder => "Email" %>
	  <%= f.password_field :password, :class => "form-text-input", :placeholder => "Password" %>
	  <% if devise_mapping.rememberable? -%>
	    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
	  <% end -%>
	  <center><%= f.submit "Sign in", :class => "form-submit-input" %></center>
	<% end %>
	<%= render "devise/shared/links" %>
</div>


