<div class="floating-container">
  <h2 class="form-header">Edit <%= resource_name.to_s.humanize %></h2><br />
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, :autofocus => true, :class => "form-text-input", :placeholder => "Email" %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <%= f.password_field :password, :autocomplete => "off", :class => "form-text-input", :placeholder => "Password" %>
    <%= f.password_field :password_confirmation, :class => "form-text-input", :placeholder => "Password Confirmation" %>
    <%= f.password_field :current_password, :class => "form-text-input", :placeholder => "Current Password" %>
    <center><%= f.submit "Update", :class => "form-submit-input" %></center>
  <% end %>
  <center><%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></center>

  <%= link_to "Back", :back %>
</div>
